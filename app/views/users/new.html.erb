<%= form_for @user do |f| %>
  <%= f.label :username, "Enter username: " %>
  <%= f.text_field :username %>
  <%= f.label :email, "Enter email: " %>
  <%= f.text_field :email, placeholder: "example@example.com" %>
  <%= f.label :password, "Enter password: " %>
  <%= f.password_field :password %>
  <%= f.submit "Submit" %>
<% end %>

